<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llc_answer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_word_persian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/farsi_kacst_one"
        android:text=" "
        android:textAlignment="center"
        android:textColor="@color/negative_incorrect"
        android:textSize="28sp"
        android:textStyle="normal"
        app:fontFamily="@font/farsi_kacst_one" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_word_uzb"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/farsi_kacst_one"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="normal"
        app:fontFamily="@font/farsi_kacst_one"
        tools:text="O'zbekcha" />

    <View
        android:id="@+id/v_divider"
        android:layout_width="match_parent"
        android:layout_height="0.9dp"
        android:layout_marginTop="24dp"
        android:background="@color/gray_light" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_select_word"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:maxLines="2"
        android:text="@string/checked_correct_answer"
        android:textAlignment="center"
        android:textSize="14sp"
        android:textStyle="normal" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_input_letter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="36dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="36dp"
        android:background="@drawable/shape_input_construct"
        android:minWidth="250dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="26sp"
        android:textStyle="bold"
        tools:text="دمبل" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_letters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:orientation="vertical"
        android:overScrollMode="never"
        tools:itemCount="6"
        tools:listitem="@layout/item_letter" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="56dp"
        android:background="@drawable/ripple_next_button"
        android:text="@string/next_word"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:visibility="invisible" />

</androidx.appcompat.widget.LinearLayoutCompat>