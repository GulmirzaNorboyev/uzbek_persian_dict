<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llc_word"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ripple_select_item"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingTop="4dp"
    android:paddingEnd="16dp"
    android:paddingBottom="4dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_word_persian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/farsi_kacst_one"
        android:maxLines="2"
        android:textColor="@color/cyan"
        android:textSize="18sp"
        android:textStyle="normal"
        app:fontFamily="@font/farsi_kacst_one"
        tools:text="دمبل" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_word_uzb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-6dp"
        android:maxLines="2"
        android:textColor="@color/gray"
        android:textSize="15sp"
        android:textStyle="normal"
        tools:text="@string/menu_about" />

</androidx.appcompat.widget.LinearLayoutCompat>