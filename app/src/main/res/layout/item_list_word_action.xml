<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fl_action"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/llc_action_container"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal">

        <uz.xia.ivat.uzbpersiandictionary.util.CheckedFrameLayout
            android:id="@+id/ch_action_fav"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/selector_fav_action"
            android:checked="true"
            android:clickable="true"
            android:focusable="true">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:src="@drawable/ic_baseline_star_white" />

        </uz.xia.ivat.uzbpersiandictionary.util.CheckedFrameLayout>

        <uz.xia.ivat.uzbpersiandictionary.util.CheckedFrameLayout
            android:id="@+id/ch_action_train"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/selector_train_action"
            android:checked="true"
            android:clickable="true"
            android:focusable="true">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_dumbell"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:src="@drawable/ic_dumbell_unchecked_white" />

        </uz.xia.ivat.uzbpersiandictionary.util.CheckedFrameLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <include layout="@layout/item_word" />

</FrameLayout>