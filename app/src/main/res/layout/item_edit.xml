<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llc_word"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ripple_select_item"
    android:clickable="true"
    android:focusable="true"
    android:orientation="horizontal">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/llc_translate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="8dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_word_persian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/farsi_kacst_one"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textDirection="ltr"
            android:textSize="16sp"
            android:textStyle="normal"
            app:fontFamily="@font/farsi_kacst_one"
            tools:text="دمبل" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_word_uzb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-4dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/gray"
            android:textSize="13sp"
            android:textStyle="normal"
            tools:text="@string/menu_about" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <uz.xia.ivat.uzbpersiandictionary.util.CheckedFrameLayout
        android:id="@+id/ch_uzb_persian"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@drawable/selector_editor"
        android:checked="false">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_uzb_persian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_baseline_check_circle" />

    </uz.xia.ivat.uzbpersiandictionary.util.CheckedFrameLayout>

    <uz.xia.ivat.uzbpersiandictionary.util.CheckedFrameLayout
        android:id="@+id/ch_persian_uzb"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginStart="1dp"
        android:background="@drawable/selector_editor"
        android:checked="false">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_persian_uzb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_baseline_check_circle" />

    </uz.xia.ivat.uzbpersiandictionary.util.CheckedFrameLayout>

    <uz.xia.ivat.uzbpersiandictionary.util.CheckedFrameLayout
        android:id="@+id/ch_sprint"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginStart="1dp"
        android:background="@drawable/selector_editor"
        android:checked="false">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_sprint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_baseline_check_circle" />

    </uz.xia.ivat.uzbpersiandictionary.util.CheckedFrameLayout>

    <uz.xia.ivat.uzbpersiandictionary.util.CheckedFrameLayout
        android:id="@+id/ch_construct"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginStart="1dp"
        android:background="@drawable/selector_editor"
        android:checked="false">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_construct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_baseline_check_circle" />

    </uz.xia.ivat.uzbpersiandictionary.util.CheckedFrameLayout>

    <uz.xia.ivat.uzbpersiandictionary.util.CheckedFrameLayout
        android:id="@+id/ch_all"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginStart="1dp"
        android:background="@drawable/selector_editor"
        android:checked="false">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_baseline_check_circle" />

    </uz.xia.ivat.uzbpersiandictionary.util.CheckedFrameLayout>

</androidx.appcompat.widget.LinearLayoutCompat>